{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "react-rollup/*": [
        "../package-mono/packages/react-rollup/dist/*"
      ],
      "react-rollup": [
        "../package-mono/packages/react-rollup/dist/index"
      ],
      "react-babel/*": [
        "../package-mono/packages/react-babel/dist/*"
      ],
      "react-babel": [
        "../package-mono/packages/react-babel/dist/index"
      ],
      "react-ts/*": [
        "../package-mono/packages/react-ts/dist/*"
      ],
      "react-ts": [
        "../package-mono/packages/react-ts/dist/index"
      ],
      "esbuild/*": [
        "../package-mono/packages/esbuild/dist/*"
      ],
      "esbuild": [
        "../package-mono/packages/esbuild/dist/index"
      ]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
